<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/splashRootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBg3"
    >
<!--    android:src="@drawable/splash_bg_1"-->

    <ImageView
        android:id="@+id/iv_splash_title"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/new_logo2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="200dp"
        />
    <ImageView
        android:id="@+id/iv_splash_title_txt"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:src="@drawable/new_logo_txt2"
        app:layout_constraintTop_toBottomOf="@id/iv_splash_title"
        app:layout_constraintStart_toStartOf="@id/iv_splash_title"
        app:layout_constraintEnd_toEndOf="@id/iv_splash_title"
        >
    </ImageView>
    <!--        android:src="@drawable/splashlogotxt"-->
    <ProgressBar
        android:id="@+id/pg_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:theme="@style/Progressbar_color_under_api21"
        app:layout_constraintTop_toBottomOf="@id/iv_splash_title_txt"
        app:layout_constraintBottom_toBottomOf="parent"
        />

